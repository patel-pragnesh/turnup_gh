var animation=require("alloy/animation");exports.validateEmail=function(i){var t=/^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;return 0==t.test(i)?!1:!0},exports.validationFailAction=function(i){i.borderColor=Alloy.CFG.Colors.validationFailColor,i.borderWidth=2,animation.shake(i,200,null),Ti.Media.vibrate([0,500])},exports.backToNormal=function(i){i.borderColor=Alloy.CFG.Colors.MainColor,i.borderWidth=1};