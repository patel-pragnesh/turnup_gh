function ucfirst(i){return i?i[0].toUpperCase()+i.substr(1):i}var Alloy=require("alloy"),widgets={};module.exports=function(i){var t=this;return widgets[i]?widgets[i]:(this.widgetId=i,this.Collections={},this.Models={},this.Shared={},this.createController=function(t,e){return new(require("alloy/widgets/"+i+"/controllers/"+t))(e)},this.createCollection=function(t,e){return new(require("alloy/widgets/"+i+"/models/"+ucfirst(t)).Collection)(e)},this.createModel=function(t,e){return new(require("alloy/widgets/"+i+"/models/"+ucfirst(t)).Model)(e)},this.createWidget=Alloy.createWidget,this.Collections.instance=function(i){return t.Collections[i]||(t.Collections[i]=t.createCollection(i))},this.Models.instance=function(i){return t.Models[i]||(t.Models[i]=t.createModel(i))},void(widgets[i]=this))};