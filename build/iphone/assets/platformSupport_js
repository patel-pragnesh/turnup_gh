var dpi=0,getScreenDpi=function(){return 0==dpi|null==dpi&&(dpi=Ti.Platform.displayCaps.dpi),dpi};exports.getScreenDpi=getScreenDpi;var width=0,getScreenWidth=function(){return width=Ti.Platform.displayCaps.platformWidth};exports.getScreenWidth=getScreenWidth;var height=0,getScreenHeight=function(){return height=Ti.Platform.displayCaps.platformHeight};exports.getScreenHeight=getScreenHeight;var convertDptoPx=function(i){return i*(getScreenDpi()/160)};exports.convertDptoPx=convertDptoPx;var convertPxtoDp=function(i){return i/(getScreenDpi()/160)};exports.convertPxtoDp=convertPxtoDp;var osVersion=Ti.Platform.version,isiOS7Plus=function(){var i=osVersion,t=0;null!=i&&(t=osVersion.split("."));var e=parseInt(t[0],10);return e>=7?!0:!1};exports.isiOS7Plus=isiOS7Plus;var isPortrait=function(){var i=!1;return(1==Titanium.UI.orientation||2==Titanium.UI.orientation)&&(i=!0),i};exports.isPortrait=isPortrait,exports.getImageSize=function(i){var t=[],e=Ti.UI.createImageView({image:i,width:"auto",height:"auto"});return img=e.toBlob(),null==img?(t.width=100,t.height=100):(t.width=img.width,t.height=img.height),e=null,t};var getGridPhotoSize=function(i,t){var e=[];if(i.height<i.width){if(e.height=t.height,e.width=i.width/i.height*e.height,e.width<t.width){var o=t.width-e.width,s=e.width/e.height*o;e.height+=s,e.width+=o}}else if(e.width=t.width,e.height=i.height/i.width*e.width,e.height<t.height){var o=t.height-e.height,r=e.height/e.width*o;e.height+=o,e.width+=r}return e};exports.getGridPhotoSize=getGridPhotoSize;var getGridPhotoSizeCalWidth=function(i,t){var e=[];return e.width=t,e.height=i.height/i.width*e.width,e};exports.getGridPhotoSizeCalWidth=getGridPhotoSizeCalWidth,exports.setNormalFontForTablet=function(i,t){i.font={fontSize:t,fontFamily:"Monda-Regular"}},exports.setBoldFontForTablet=function(i,t){i.font={fontSize:t,fontFamily:"Monda-Regular",fontWeight:"bold"}};var getThumbPhotoSize=function(i,t){var e=[];return isPortraitImage(i)?(e.width=t.width,e.height=i.height/i.width*e.width):(e.height=t.height,e.width=i.width/i.height*e.height),e};exports.getThumbPhotoSize=getThumbPhotoSize;var isPortraitImage=function(i){return i.height>i.width?!0:!1};exports.isPortraitImage=isPortraitImage,exports.hideActionBar=function(i){"android"==Ti.Platform.osname&&i.activity.actionBar.hide()};