exports.get=function(args){if(null!=args){var url=args.url,xhr=Ti.Network.createHTTPClient({onload:function(e){if(""!=this.responseText){var feeds=eval("("+this.responseText+")");args.callbackFunction&&(args.callbackFunction(feeds),console.log("Response From API : "+JSON.stringify(feeds)))}},onerror:function(i){Ti.API.debug("STATUS: "+this.status),Ti.API.debug("TEXT:   "+this.responseText),Ti.API.debug("ERROR:  "+i.error)},timeout:5e3});xhr.open("GET",url),xhr.send()}},exports.downloadFileToApp=function(i){if(null!=i){var t=i.urlDownload,e=i.fileName,o=Ti.Network.createHTTPClient({onload:function(){var t=null;t=Titanium.Filesystem.applicationDataDirectory;var s=Titanium.Filesystem.getFile(t,e);s.exists()&&s.deleteFile();var r=Titanium.Filesystem.getFile(t,e);r.write(o.responseData),console.log("xhr response : "+o.responseData),i.callbackFunction&&i.callbackFunction(e,i.fileType)},onerror:function(i){Ti.API.debug("STATUS: "+this.status),Ti.API.debug("TEXT:   "+this.responseText),Ti.API.debug("ERROR:  "+i.error)},timeout:5e3});console.log("Download URL : "+t),o.open("GET",t),o.send()}},exports.post=function(args){if(null!=args){var url=args.url,postPayload=args.payload,xhr=Ti.Network.createHTTPClient({onload:function(e){if(""!=this.responseText){var feeds=eval("("+this.responseText+")");console.log("Response From API : "+JSON.stringify(feeds)),args.callbackFunction&&args.callbackFunction(feeds)}},onerror:function(i){Ti.API.debug("STATUS: "+this.status),Ti.API.debug("TEXT:   "+this.responseText),Ti.API.debug("ERROR:  "+i.error)},timeout:5e3});postPayload=JSON.stringify(postPayload),console.log("JSON Payload "+postPayload),console.log("URL "+url),xhr.open("POST",url),xhr.setRequestHeader("Content-Type","application/json"),xhr.send(postPayload)}},exports.put=function(args){if(null!=args){var url=args.url,postPayload=args.payload,xhr=Ti.Network.createHTTPClient({onload:function(e){if(""!=this.responseText){var feeds=eval("("+this.responseText+")");console.log("Response From API : "+JSON.stringify(feeds)),args.callbackFunction&&args.callbackFunction(feeds,args.needUpdate)}},onerror:function(i){Ti.API.debug("STATUS: "+this.status),Ti.API.debug("TEXT:   "+this.responseText),Ti.API.debug("ERROR:  "+i.error)},timeout:5e3});postPayload=JSON.stringify(postPayload),console.log("JSON Payload "+postPayload),console.log("URL "+url),xhr.open("PUT",url),xhr.setRequestHeader("Content-Type","application/json"),xhr.send(postPayload)}};