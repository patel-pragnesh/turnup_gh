<Alloy>
	<Window class="container" >
		<View  class="title-bg">
	    	<View class="h-size" id="AppWrapper">
			    <Label id="mainTitle" class="title links" text="Forgot Password" left="30" onClick="closeWindow"></Label>
				<ImageView id="imgBack" class="iconBig left0" onClick="closeWindow"></ImageView>
			</View>
		</View>
		
		<ScrollView id="forgotPasswordView" class="top1 left3 right3 ver">
			
			<View  class="h-size w-size hor top1" left="0">
				<ImageView class="top3 iconSmall" id="imgEmailForgot">
				</ImageView>
				<Label class="p-strong text-left h-size" top="9" color="#464646" id="lblEmail">
					Email
				</Label>
			</View>
			<TextField class="txt span12 txtborder top1" id="txtEmailForgot" hintText="Email" ></TextField>
		
		
			<Button id="btnRequest" class="p top4 bottom2 span12 register" title=" Request " onClick="forgotProcess"/>
		</ScrollView>
		
	</Window>
</Alloy>