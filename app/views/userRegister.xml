<Alloy>
	<Window class="container" >
		<View  class="title-bg">
	    	<View class="h-size" id="AppWrapper">
			    <Label id="mainTitle" class="title links" text="Register" left="30" onClick="closeWindow"></Label>
				<ImageView id="imgBack" class="iconBig left0" onClick="closeWindow"></ImageView>
			</View>
		</View>
		
		<ScrollView id="registerView" class="top1 left3 right3 ver">
			
			<View  class="h-size w-size hor top1" left="0">
				<ImageView class="top3 icon" id="imgUserNameRegister">
				</ImageView>
				<Label class="p-strong text-left h-size" top="13" color="#464646" id="lblUserName">
					User Name
				</Label>
			</View>
			<TextField class="txt span12 txtborder top1" id="txtUserName" hintText="User Name" ></TextField>
			
			<View  class="h-size w-size hor top1" left="0">
				<ImageView class="top3 iconSmall" id="imgEmailRegister">
				</ImageView>
				<Label class="p-strong text-left h-size" top="9" color="#464646" id="lblEmail">
					Email
				</Label>
			</View>	
			<TextField class="txt span12 txtborder top1" id="txtEmail" hintText="Email" ></TextField>
		
			<View  class="h-size w-size hor top1" left="0">
				<ImageView class="top3 icon" id="imgPasswordRegister">
				</ImageView>		
				<Label class="p-strong text-left h-size" top="13" color="#464646" id="lblPassword">
					Password
				</Label>
			</View>
			<TextField class="txt span12 txtborder top1" id="txtPassword" hintText="Password" passwordMask="true"></TextField>
		
			<Button id="btnRegister" class="p top4 bottom2 span12 register" title=" Register " onClick="doUserRegister" />
		</ScrollView>
		
	</Window>
</Alloy>